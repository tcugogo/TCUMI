        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Last_Window" WindowState="Maximized">
    <Window.Resources>

        <!-- Common button style -->
        <Style TargetType="Button" x:Key="StyledButton">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Background" Value="#FFE9B663" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderBrush" Value="#FFEB7258" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border 
                        Name="border"
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.4" />
                                </Border.Effect>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Mouse hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="yellow" />
                            </Trigger>
                            <!-- Button pressed effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE9B663" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- 上方功能區 -->
        <Grid DockPanel.Dock="Top" Margin="0">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Button 
                        Click="ZoomInY_Click"
                        Style="{StaticResource StyledButton}"
                        x:Name="btn_ZoomInY"
                        Width="80"
                        Content="Y放大"
                        Visibility="Visible" />
                <Button 
                            Click="ZoomOutY_Click"
                            Style="{StaticResource StyledButton}"
                            x:Name="btn_ZoomOutY"
                            Width="80"
                            Content="Y縮小"
                            Visibility="Visible" />
                <Button 
                            Click="ZoomInX_Click"
                            Style="{StaticResource StyledButton}"
                            x:Name="btn_ZoomInX"
                            Width="80"
                            Content="X放大"
                            Visibility="Visible" />
                <Button 
                            Click="ZoomOutX_Click"
                            Style="{StaticResource StyledButton}"
                            x:Name="btn_ZoomOutX"
                            Width="80"
                            Content="X縮小"
                            Visibility="Visible" />
                <Button Height="35" Width="80"  Style="{StaticResource StyledButton}" Click="Save_Change_MarkSite">
