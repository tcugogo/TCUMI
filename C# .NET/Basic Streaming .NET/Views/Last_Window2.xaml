<Window x:Class="Basic_Streaming_NET.Views.Last_Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basic_Streaming_NET.Views"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Last_Window2" WindowState="Maximized">

    <!-- 定義資源 -->
    <Window.Resources>
        <!-- 通用按鈕樣式 -->
        <Style TargetType="Button" x:Key="StyledButton">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Background" Value="#FFE9B663" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderBrush" Value="#FFEB7258" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border 
                                Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.4" />
                                </Border.Effect>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- 滑鼠懸停 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Yellow" />
                            </Trigger>
                            <!-- 按下 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE9B663" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 界面內容 -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 功能按鈕 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal">
            <Button 
                Click="ZoomInY_Click"
                Width="80"
                Height="35"
                Style="{StaticResource StyledButton}"
                x:Name="btn_ZoomInY"
                Content="Y放大"
                Visibility="Visible" />
            <Button 
                Click="ZoomOutY_Click"
                Width="80"
                Height="35"
                Style="{StaticResource StyledButton}"
                x:Name="btn_ZoomOutY"
                Content="Y縮小"
                Visibility="Visible" />
            <Button 
                Click="ZoomInX_Click"
                Width="80"
                Height="35"
                Style="{StaticResource StyledButton}"
                x:Name="btn_ZoomInX"
                Content="X放大"
                Visibility="Visible" />
            <Button 
                Click="ZoomOutX_Click"
                Width="80"
                Height="35"
                Style="{StaticResource StyledButton}"
                x:Name="btn_ZoomOutX"
                Content="X縮小"
                Visibility="Visible" />
            <Button 
                Click="Update_mark"
                Width="80"
                Height="35"
                Style="{StaticResource StyledButton}"
                x:Name="btn_Update_mark"
                Content="更新Mark"
                Visibility="Visible" />
            <!--<Button 
                Click="Cancel_mark"
                Width="80"
                Style="{StaticResource StyledButton}"
                x:Name="btn_Cancel_mark"
                Content="取消Mark"
                Visibility="Visible" />-->
        </StackPanel>

        <!-- 圖表區域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="PlotsContainer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <oxy:PlotView Model="{Binding}" Height="200" Margin="10" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 滑桿 -->
        <Slider Grid.Row="2"
                x:Name="XAxisSlider"
                Minimum="0"
                TickFrequency="1"
                ValueChanged="XAxisSlider_ValueChanged"
                Margin="5,0,0,0"
                VerticalAlignment="Bottom"
                Height="30"
                Visibility="Visible" />
    </Grid>
</Window>
